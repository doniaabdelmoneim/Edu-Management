@model Student
@{
    ViewBag.Title = "Delete Student";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Student Confirmation
                    </h3>
                </div>
                <div class="card-body text-center">
                    <form method="post" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <i class="fas fa-user-slash fa-4x text-danger mb-3"></i>
                            <h4 class="fw-bold">Are you sure you want to delete this student?</h4>
                            <p class="text-muted">This action cannot be undone and will permanently remove all student records.</p>
                        </div>

                        <div class="alert alert-danger">
                            <h5 class="alert-heading">
                                <i class="fas fa-user-graduate me-2"></i>
                                Student: <span class="fw-bold">@Model.Name</span>
                            </h5>
                            <hr>
                            <div class="row text-start">
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <i class="fas fa-id-card me-2"></i>ID: @Model.Id
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <i class="fas fa-envelope me-2"></i>Email: @Model.Email
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>