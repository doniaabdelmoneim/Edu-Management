@model IEnumerable<Student>
@{
        ViewBag.Title = "Students";

}

<div class="container mb-2 mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-transparent  d-flex justify-content-between align-items-center p-3">
            <h2 class="mb-0 text-danger">Student List</h2>
            <a asp-action="Create" class="btn btn-outline-danger  ">
                <i class="fas fa-plus me-1"></i> Create Student
            </a>
        </div>
    <div class="card-body">
        <div >
            <table class="table table-bordered align-middle table-hover">
                <thead class="table-light text-center">
                    <tr>
                        <th> ID</th>
                        <th> Name</th>
                        <th> Age</th>
                        <th> Email</th>
                        <th> Department</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model.Count () == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center">No Record Found</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                    <td> <a asp-action="details" asp-route-id="@student.Id" class="text-decoration-none">@student.Name</a></td>
                                <td>@student.Age</td>
                                <td>@student.Email</td>
                                <td>@student.Department.DeptName</td>
                                <td class="g-3">
                                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-outline-primary">Details</a>
                                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-outline-success">Edit</a>
                                    <a  asp-action="Delete" asp-route-id="@student.Id" class="btn btn-outline-danger">Delete</a>
                            </tr>
                        }
                    }

                </tbody>
            </table>

       </div>
        </div>
    </div>

    </div>

