@model Student
@{
        ViewBag.Title = "Details Student";

}
<div class="container mb-2 ">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-start border-primary border-4 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h4 class="mb-0 text-primary">
                            <i class="fas fa-user-graduate me-2"></i>Student Details
                        </h4>
                    </div>
                    <div class="card-body text-center">
                        <dl class="row">
                            <dt class="col-sm-3 fw-semibold">Full Name</dt>
                            <dd class="col-sm-9 mb-3"> @Model.Name</dd>

                            <dt class="col-sm-3 fw-semibold">Department</dt>
                            <dd class="col-sm-9 mb-3">
                                <span class="badge bg-success">@Model.Department.DeptName</span>
                            </dd>

                            <dt class="col-sm-3 fw-semibold">Age</dt>
                            <dd class="col-sm-9 mb-3">@Model.Age</dd>

                            <dt class="col-sm-3 fw-semibold">Email</dt>
                            <dd class="col-sm-9 mb-3">@Model.Email</dd>

                        </dl>
                    </div>
                </div>
                <div class="d-flex flex-column flex-md-row justify-content-between gap-3">
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-2"></i>Delete
                        </a>
                    </div>
                        </div>
                </div>
            </div>
        </div>

