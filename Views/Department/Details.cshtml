@model Department
@{
    ViewBag.Title = "Department Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-building me-2"></i>Department Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="p-3 border rounded">
                                <h4 class="text-primary mb-4">
                                    <i class="fas fa-info-circle me-2"></i>Department Information
                                </h4>
                                <dl class="row">
                                    <dt class="col-sm-5 fw-semibold"> Name:</dt>
                                    <dd class="col-sm-7 mb-3">@Model.DeptName</dd>

                                    <dt class="col-sm-5 fw-semibold">Capacity:</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-primary rounded-pill">
                                            @Model.capacity Students
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <div class="col-md-6 mt-4 mt-md-0">
                            <div class="p-3 border rounded h-100">
                                <h4 class="text-primary mb-4">
                                    <i class="fas fa-users me-2"></i>Students in Department
                                </h4>

                                @if (Model.Students.Any ())
                                {
                                    <div class="list-group">
                                        @foreach (var student in Model.Students)
                                        {
                                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>
                                                    <i class="fas fa-user-graduate text-muted me-2"></i>
                                                    @student.Name
                                                </span>
                                                <a href="/Student/Details/@student.Id" class="btn btn-sm btn-outline-primary">  
                                                   <i class="fas fa-info-circle"></i> Details  
                                                </a>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        No students enrolled in this department
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.deptId" class="btn btn-success me-2">
                                <i class="fas fa-edit me-2"></i>Edit Department
                            </a>
                            <a onclick="return confirm('Are you sure you want to delete this department?')"
                               asp-action="Delete" asp-route-id="@Model.deptId" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>