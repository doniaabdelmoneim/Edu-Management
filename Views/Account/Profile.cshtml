
@model projectX.Models.User
@{
    ViewBag.Title = "User Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="avatar-container mb-3">
                        <img src="https://ui-avatars.com/api/?name=@Model.Name&background=0D8ABC&color=fff&size=128"
                             alt="Profile Image" class="rounded-circle img-thumbnail" width="128">
                    </div>
                    <h4 class="mb-1">@Model.Name</h4>
                    <p class="text-muted mb-3">@Model.Email</p>

                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-camera me-1"></i> Change Photo
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-user-shield me-2"></i>Roles</h6>
                </div>
                <div class="card-body">
                    @if (Model.UserRoles != null && Model.UserRoles.Any ())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var role in Model.UserRoles.Select (ur => ur.Role))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @role.Name
                                    <span class="badge bg-primary rounded-pill">
                                        <i class="fas fa-check"></i>
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No roles assigned</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Personal Information</h6>
                    <a asp-action="EditProfile" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Full Name:</div>
                        <div class="col-sm-9">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Email:</div>
                        <div class="col-sm-9">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Age:</div>
                        <div class="col-sm-9">@Model.Age</div>
                    </div>
                    
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-lock me-2"></i>Security</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary text-start">
                            <i class="fas fa-key me-2"></i>Change Password
                        </a>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
