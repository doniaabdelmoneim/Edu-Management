

@{
    ViewBag.Title = "Logout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-door-open text-primary" style="font-size: 4rem;"></i>
                    </div>
                    <h4>Are you sure you want to log out?</h4>
                    <p class="text-muted">You'll need to sign in again to access your account.</p>

                    <div class="d-flex justify-content-center mt-4">
                        <form asp-action="Logout" method="post" class="me-2">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fas fa-sign-out-alt me-2"></i>Yes, Logout
                            </button>
                        </form>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

